{
  "name": "lowcode-build-scripts",
  "version": "1.0.0",
  "description": "通用的工程化构建插件项目",
  "main": "./src/index.js",
  "author": "jinxu0853@gmail.com",
  "license": "ISC",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "typescript",
    "build"
  ],
  "scripts": {
    "build": "tsup",
    "lint": " pnpm lint:es & pnpm lint:style &pnpm lint:prettier",
    "lint:es": "eslint --ext .js,.jsx,.ts,.tsx ./ --cache --quiet --resolve-plugins-relative-to .",
    "lint:style": "stylelint \"**/*.{css,skipProjectless}\" --syntax less --allow-empty-input",
    "lint:prettier": "prettier --list-different \"**/*.{css,less,js,jsx,ts,tsx,json,yml,yaml,md}\"",
    "fix": "pnpm run fix:es && pnpm run fix:prettier && pnpm run fix:style",
    "fix:es": "eslint --ext .js,.jsx,.ts,.tsx ./ --cache --quiet --fix --resolve-plugins-relative-to .",
    "fix:style": "stylelint \"**/*.{css,less}\" --syntax less --fix --allow-empty-input",
    "fix:prettier": "prettier --write \"**/*.{css,less,js,jsx,ts,tsx,json,yml,yaml,md}\""
  },
  "dependencies": {
    "@jest/types": "^29.1.2",
    "address": "^1.1.0",
    "camelcase": "^5.3.1",
    "chalk": "^2.4.1",
    "chokidar": "^3.3.1",
    "commander": "^2.19.0",
    "deepmerge": "^4.0.0",
    "detect-port": "^1.3.0",
    "esbuild": "^0.14.22",
    "fast-glob": "^3.2.7",
    "fs-extra": "^8.1.0",
    "inquirer": "^6.5.1",
    "json5": "^2.1.3",
    "lodash": "^4.17.15",
    "npmlog": "^4.1.2",
    "semver": "^7.3.2",
    "webpack-chain": "^6.5.1",
    "yargs-parser": "^14.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^26.0.10",
    "@types/json5": "^0.0.30",
    "@types/lodash": "^4.14.147",
    "@types/npmlog": "^4.1.2",
    "@types/semver": "^6.2.0",
    "@types/webpack": "^4.41.30",
    "@types/webpack-chain": "^5.2.0",
    "@types/webpack-dev-server": "^4.0.0",
    "jest": "^27.0.6",
    "package-json": "^6.5.0",
    "ts-jest": "^27.0.3",
    "typescript": "^3.7.2",
    "webpack": "^5.0.0",
    "webpack-dev-server": "^4.0.0"
  }
}
