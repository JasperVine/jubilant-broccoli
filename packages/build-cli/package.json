{
  "name": "@tuzki/scaffold-build-cli",
  "version": "1.0.0",
  "description": "Cli project",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "build-cli": "./bin/index.js"
  },
  "engines": {
    "node": ">=14.17.3",
    "npm": ">=6.14.13"
  },
  "scripts": {
    "test": "vitest run",
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "pnpm run lint:es && pnpm run lint:prettier",
    "lint:es": "eslint --ext .ts ./ --cache --quiet --resolve-plugins-relative-to .",
    "lint:prettier": "prettier --list-different \"**/*.{ts,md}\"",
    "fix": "pnpm run fix:es && pnpm run fix:prettier",
    "fix:es": "eslint --ext .ts, ./ --cache --quiet --fix --resolve-plugins-relative-to .",
    "fix:prettier": "prettier --write \"**/*.{ts,md}\"",
    "clean": "rm -rf node_modules"
  },
  "author": "jinxu0853@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@tuzki/scaffold-webpack-service": "workspace:^1.0.0",
    "@types/detect-port": "^1.3.2",
    "@types/semver": "^7.3.12",
    "chalk": "^5.1.2",
    "commander": "^9.4.1",
    "detect-port": "^1.5.1",
    "semver": "^7.3.8"
  }
}
